{
  "name": "stock-link",
  "productName": "Stock Link",
  "version": "1.0.0",
  "description": "Stock Link Management App",
  "main": "main.js",
  "author": "Mr. P. Mumo - Welt Tallis Cooperation",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf node_modules/fsevents node_modules/chokidar/node_modules/fsevents && mkdirp node_modules/fsevents",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "npm run build && electron-forge make",
    "build-frontend": "npm --prefix ../frontend/managment install && npm --prefix ../frontend/managment run build && shx cp -r ../frontend/managment/dist frontend-dist",
    "build-backend": "cd scripts/backend && npm install --production --no-optional",
    "rebuild-native": "cd scripts/backend && npx electron-rebuild -f -w better-sqlite3",
    "build": "npm run prebuild && npm run build-frontend && npm run build-backend && npm run rebuild-native",
    "clean": "rimraf frontend-dist dist out",
    "clean-deep": "rimraf node_modules dist frontend-dist out package-lock.json",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder --win --x64"
  },
  "build": {
    "appId": "com.stocklink.app",
    "productName": "Stock Link",
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "scripts/backend/node_modules/better-sqlite3/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "frontend-dist/**/*",
      "!scripts/backend/**/*",
      "!**/fsevents*",
      "!**/chokidar/**",
      "!**/nodemon/**",
      "!node_modules/**/*.map",
      "!node_modules/**/test/*",
      "!node_modules/**/docs/*"
    ],
    "extraResources": [
      {
        "from": "scripts/backend",
        "to": "scripts/backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "scripts/backend/node_modules",
        "to": "scripts/backend/node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "extra_binaries/node",
        "to": "extra_binaries/node"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/image/favicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Stock Link"
    },
    "nodeGypRebuild": false
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.3.0",
    "electron": "^29.4.6",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "mkdirp": "^3.0.1",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "bwip-js": "^4.7.0",
    "cors": "^2.8.5",
    "detect-port": "^2.1.0",
    "dotenv": "^17.0.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.4.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "^2.0.1",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.0",
    "node-fetch": "^2.6.7",
    "node-machine-id": "^1.1.12",
    "nodemailer": "^7.0.4",
    "pdf-to-printer": "^5.6.0",
    "pdfkit": "^0.17.1",
    "qrcode": "^1.5.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.3.0",
    "sqlite3": "^5.1.7",
    "validator": "^13.15.15"
  }
}
